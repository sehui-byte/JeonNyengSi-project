	<!-- 전체 세프 조회 -->
	<select id="chefSelectAll" parameterType="cvo" resultType="cvo">
		SELECT 
		         B.INO
		        ,A.MNO 
		        ,A.MID
		        ,A.MNAME
		        ,A.MNICK
		        ,A.MLEVEL
		        ,B.IINSERTDATE
		FROM MEMBER A, CHEF_INFO B
		WHERE A.MNO = B.MNO
		AND B.IDELETEYN = 'Y'
	</select>
	
	<!-- 세프 조회 -->
	<select id="chefSelect" parameterType="cvo" resultType="cvo">
		SELECT 
				 B.INO
		        ,A.MID
		        ,A.MNAME
		        ,A.MNICK
		        ,A.MLEVEL
		        ,B.IINSERTDATE
		FROM MEMBER A, CHEF_INFO B
		WHERE A.MNO = B.MNO
		AND A.MNO = #{mno, jdbcType=VARCHAR}
		AND B.IDELETEYN = 'Y'
	</select>
	
	<!-- 세프 등록 -->
	<insert id="chefInsert" parameterType="cvo">
		INSERT INTO CHEF_INFO
		            (
		             INO
		            ,MNO
		            ,IINSERTDATE
		            ,IUPDATEDATE
		            ,IDELETEYN
		            )
		VALUES      (
		             #{ino, jdbcType=VARCHAR} 
		            ,(SELECT MNO 
		              FROM MEMBER 
		              WHERE MLEVEL='C' 
		              AND MNO = #{mno, jdbcType=VARCHAR})
		            ,SYSDATE
		            ,SYSDATE
		            ,'Y'
		            )
	</insert>
	
	<!-- 세프 삭제 -->
	<update id="chefDelete" parameterType="cvo">
		UPDATE CHEF_INFO
		SET
		     IDELETEYN = 'N'
		    ,IUPDATEDATE = SYSDATE
		WHERE INO = #{ino, jdbcType=VARCHAR}
	</update>

